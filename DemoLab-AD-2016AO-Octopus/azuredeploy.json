{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "group": "Infrastructure settings",
        "description": "Change this value to your repo name if deploying from a fork"
      },
      "defaultValue": "https://raw.githubusercontent.com/SQLDBAWithABeard/ARMTemplates/master"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "group": "Infrastructure settings",
        "description": "Auto-generated token to access _artifactsLocation",
        "artifactsLocationSasToken": ""
      },
      "defaultValue": ""
    }
  },
  "resources": [
    {
      "name": "DeployDomainController",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'),'/','active-directory-new-domain','/','azuredeploy.json', parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat(parameters('_artifactsLocation'),'/','DemoLab-AD-2016AO','/','DomainController.parameters.json', parameters('_artifactsLocationSasToken'))]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
        {
          "name": "DeploySQL",
          "type": "Microsoft.Resources/deployments",
          "apiVersion": "2017-05-10",
          "dependsOn": ["Microsoft.Resources/deployments/DeployDomainController"],
          "properties": {
            "mode": "Incremental",
            "templateLink": {
              "uri": "[concat(parameters('_artifactsLocation'),'/','sql-server-2016-alwayson-existing-vnet-and-ad','/','azuredeploy.json', parameters('_artifactsLocationSasToken'))]",
              "contentVersion": "1.0.0.0"
            },
            "parametersLink": {
              "uri": "[concat(parameters('_artifactsLocation'),'/','DemoLab-AD-2016AO','/','SQLAO.parameters.json', parameters('_artifactsLocationSasToken'))]",
              "contentVersion": "1.0.0.0"
            }
          }
        },
            {
              "name": "DeployOctopus",
              "type": "Microsoft.Resources/deployments",
              "apiVersion": "2017-05-10",
              "dependsOn": [
                "Microsoft.Resources/deployments/DeployDomainController",
                "Microsoft.Resources/deployments/DeploySQL"
              ],
              "properties": {
                "mode": "Incremental",
                "templateLink": {
                  "uri": "[concat(parameters('_artifactsLocation'),'/','octopusdeploy3-single-vm-windows','/','azuredeploy.json', parameters('_artifactsLocationSasToken'))]",
                  "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                  "uri": "[concat(parameters('_artifactsLocation'),'/','DemoLab-AD-2016AO-Octopus','/','OctopusDeploy.parameters.json', parameters('_artifactsLocationSasToken'))]",
                  "contentVersion": "1.0.0.0"
                }
              }
            }
  ]
}